{
    "name": "islamic-reminders",
    "displayName": "Islamic Reminders",
    "description": "Get periodic notifications with Hadiths and Azkar",
    "version": "0.0.1",
    "engines": {
        "vscode": "^1.80.0"
    },
    "categories": [
        "Other"
    ],
    "activationEvents": [
        "onStartupFinished"
    ],
    "main": "./out/extension.js",
    "contributes": {
        "configuration": {
            "title": "Islamic Reminders",
            "properties": {
                "islamicReminders.interval": {
                    "type": "number",
                    "default": 60,
                    "description": "Interval between reminders in minutes",
                    "minimum": 1,
                    "maximum": 1440
                },
                "islamicReminders.enableHadith": {
                    "type": "boolean",
                    "default": true,
                    "description": "Enable Hadith notifications"
                },
                "islamicReminders.enableZikr": {
                    "type": "boolean",
                    "default": true,
                    "description": "Enable Azkar notifications"
                }
            }
        }
    },
    "scripts": {
        "vscode:prepublish": "npm run compile",
        "compile": "tsc -p ./",
        "watch": "tsc -watch -p ./",
        "pretest": "npm run compile && npm run lint",
        "lint": "eslint src --ext ts",
        "test": "node ./out/test/runTest.js"
    },
    "devDependencies": {
        "@types/axios": "^0.9.36",
        "@types/node": "^16.18.126",
        "@types/vscode": "^1.80.0",
        "@typescript-eslint/eslint-plugin": "^5.42.0",
        "@typescript-eslint/parser": "^5.42.0",
        "eslint": "^8.26.0",
        "typescript": "^4.8.4"
    },
    "dependencies": {
        "axios": "^1.6.2",
        "node-fetch": "^2.6.7"
    }
}